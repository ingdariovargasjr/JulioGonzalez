<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="#80948e"
            app:layout_constraintBottom_toTopOf="@+id/txtCounter"
            android:layout_marginBottom="16dp"
            android:id="@+id/imgFinalEvidence"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_navigate_next_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_navigate_before_24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <ImageView
            android:src="@drawable/ic_navigate_before_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toStartOf="@+id/txtCounter"
            app:layout_constraintTop_toTopOf="@+id/txtCounter"
            app:layout_constraintBottom_toBottomOf="@+id/txtCounter" />
    <ImageView
            android:src="@drawable/ic_navigate_next_24dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintStart_toEndOf="@+id/txtCounter"
            app:layout_constraintTop_toTopOf="@+id/txtCounter"
            app:layout_constraintBottom_toBottomOf="@+id/txtCounter" />
    <TextView
            android:layout_marginBottom="4dp"
            android:textSize="16sp"
            android:textColor="@color/lightBlack"
            android:layout_marginTop="22dp"
            android:text="1/3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/txtCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>