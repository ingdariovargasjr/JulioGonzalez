<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF"
tools:context=".Activities.SignActivity">
<ImageView
        android:id="@+id/btn_trash"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="30dp"
        android:layout_gravity="right"
        android:src="@drawable/ic_error_gray"
        android:layout_marginRight="30dp"/>

<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <LinearLayout
            android:id="@+id/layoutUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="20dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FIRMA DEL CLIENTE"
                android:textAlignment="center"
                android:textSize="13sp" />


    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layoutLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#707070">

    </LinearLayout>
    <com.example.juliogonzales.Utils.DrawingView
            android:id="@+id/drawingView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    <LinearLayout
            android:id="@+id/btn_listo"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:background="#ffa500">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="Listo"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textColor="#FFFFFF"/>

    </LinearLayout>

    <ImageView
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/iv"
            android:background="@color/colorAccent"
            android:scaleType="fitXY"
            android:layout_weight="1"
            android:layout_marginTop="10dp"/>


    <Button
            android:visibility="gone"
            android:layout_marginBottom="16dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSS"
            android:layout_marginTop="10dp"
            android:text="Take Screenshot"/>

</LinearLayout>

</FrameLayout>