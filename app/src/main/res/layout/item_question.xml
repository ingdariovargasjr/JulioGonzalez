<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:backgroundTint="@color/greyBg"
        android:padding="12dp"
        android:elevation="3dp"
        app:cardCornerRadius="10dp"
        android:layout_height="wrap_content">
<LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Activities.QuestionActivity">

    <TextView
            android:id="@+id/tvQuestionNum"
            android:text="1/17"
            android:textColor="#2A2A2E"
            android:textSize="17sp"
            android:layout_marginTop="29dp"
            android:layout_marginStart="21dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/tvInstruction"
            android:text="Instruction"
            android:textSize="23dp"
            android:textColor="#2A2A2E"
            android:layout_marginTop="12dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/tvInstructionDesc"
            android:text="Instruction description"
            android:textColor="#2A2A2E"
            android:textSize="17dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="19dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:visibility="gone"
            android:id="@+id/layoutOtherPhoto"
            android:padding="16dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="#F4F4F4"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:paddingStart="15dp"
                    android:drawableLeft="@drawable/ic_addphoto"
                    android:background="@drawable/btn_circle_blue"
                    android:layout_width="51dp"
                    android:layout_height="51dp"/>
            <TextView
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center"
                    android:textColor="#00397D"
                    android:text="Before continuing make sure to upload your photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/btnAddOtherPhoto"
                    android:textColor="#00397D"
                    android:text="Add other photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/layoutGrade"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="85dp"
            android:paddingHorizontal="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/report_issue_layout"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/report_issue_btn"
                    android:src="@drawable/ic_error_gray"
                    android:layout_width="71dp"
                    android:layout_height="71dp"/>
            <ImageView
                    android:visibility="gone"
                    android:id="@+id/btnErrorRed"
                    android:src="@drawable/ic_error_red"
                    android:layout_width="71dp"
                    android:layout_height="71dp"/>

            <TextView
                    android:id="@+id/report_issue_txt"
                    android:text="Report an issue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:id="@+id/instruction_ok_layout"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content">

            <ImageView
                    android:id="@+id/ok_btn"
                    android:layout_width="71dp"
                    android:src="@drawable/ic_ok_gray"
                    android:layout_height="71dp"/>
            <ImageView
                    android:visibility="gone"
                    android:id="@+id/btnOkBlue"
                    android:layout_width="71dp"
                    android:src="@drawable/ic_ok_blue"
                    android:layout_height="71dp"/>

            <TextView
                    android:text="It is OK!"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </LinearLayout>


    </LinearLayout>
    <ImageView
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_gravity="center"
            android:id="@+id/imgEvidence"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>

    <Button
            android:visibility="gone"
            android:id="@+id/add_evidence_btn"
            android:text="Add an evidence"
            android:textSize="12sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:background="@drawable/round_corners_gray"
            android:layout_marginHorizontal="62dp"
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:textSize="12sp"
            android:visibility="gone"
            android:id="@+id/btnUpload"
            android:layout_marginTop="16dp"
            android:text="Upload"
            android:layout_marginStart="62dp"
            android:layout_marginEnd="62dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <TextView
            android:visibility="gone"
            android:id="@+id/txtProblemDescribe"
            android:layout_marginTop="8dp"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_gravity="center"
            android:text="Describe the problem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <EditText
            android:visibility="gone"
            android:id="@+id/editTextProblemDescribe"
            android:hint="Describe it here"
            android:background="@drawable/grey_input_bg"
            android:padding="8dp"
            android:inputType="text"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:visibility="gone"
            android:id="@+id/btnSendDescription"
            android:text="Send description"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/round_corners_gray"
            android:layout_marginHorizontal="62dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    <Button
            android:visibility="gone"
            android:enabled="false"
            android:id="@+id/btnPhoto"
            android:text="Add an evidence"
            android:textSize="13sp"
            android:textColor="#FFFFFF"
            android:background="@drawable/btn_round_blue"
            android:layout_marginHorizontal="62dp"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</LinearLayout>
</androidx.cardview.widget.CardView>