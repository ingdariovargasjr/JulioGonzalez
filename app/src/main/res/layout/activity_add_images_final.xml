<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:orientation="vertical"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Activities.AddImagesFinalActivity">

    <TextView
            android:id="@+id/txtBackEditFinal"
            android:textSize="16sp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

<TextView
        android:id="@+id/instruction_txtEdit"
        android:text="Attach an evidence"
        android:textSize="23sp"
        android:textColor="#2A2A2E"
        android:layout_marginTop="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


<ImageView
        android:src="@drawable/ic_image_mail"
        android:visibility="visible"
        android:layout_marginTop="16dp"
        android:layout_gravity="center"
        android:id="@+id/imgEvidenceEditFinal"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
<Button
        android:visibility="gone"
        android:id="@+id/btnUploadEditFinal"
        android:layout_marginTop="16dp"
        android:text="Subir"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="62dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
<Button
        android:visibility="visible"
        android:id="@+id/btnPhotoEditFinal"
        android:text="Add an evidence"
        android:textSize="13sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/round_corners_gray"
        android:layout_marginHorizontal="62dp"
        android:layout_marginTop="32dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>